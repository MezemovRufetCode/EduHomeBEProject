@model Course
@{
    ViewData["Title"] = "Create";
    //List<Category> categories = (List<Category>)ViewBag.Categories;
}
@section CSS{
    <style>
        label {
            font-weight: bold !important;
        }
    </style>
}
<div class="container">
    <h2 class="mt-3">Create course</h2>
    @*enctype imageleri idare etmek ucun*@
    <form class="mt-3" method="post" enctype="multipart/form-data">
        <div style="display:flex;justify-content:space-around">
            <div class="col-lg-5">
                <h3 class="mt-4 mb-4">Main parameters</h3>
                <div class="mb-3">
                    <label asp-for="@Model.ImageFile" class="form-label">Select Image</label>
                    <input asp-for="@Model.ImageFile" accept="image/*" class="form-control">
                    <span class="text text-danger" asp-validation-for="@Model.ImageFile"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input asp-for="@Model.Name" class="form-control">
                    <span class="text text-danger" asp-validation-for="@Model.Name"></span>
                </div>


                @*duzelmeli hisse*@

                <div class="mb-3">
                    <label asp-for="@Model.CategoryId" class="form-label">Categories</label>
                    <select asp-for="@Model.CategoryId" class="form-select" asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))">
                    </select>
                    <span class="text text-danger" asp-validation-for="@Model.CategoryId"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.TagIds" class="form-label">Tags</label>
                    <select asp-for="@Model.TagIds" class="form-select" asp-items="@(new SelectList(ViewBag.Tags,"Id","Name"))">
                    </select>
                    <span class="text text-danger" asp-validation-for="@Model.TagIds"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Description" class="form-label">Description</label>
                    <textarea asp-for="@Model.Description" class=" form-control" rows="3"></textarea>
                    <span class="text text-danger" asp-validation-for="@Model.Description"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.About" class="form-label">About</label>
                    <textarea asp-for="@Model.About" class=" form-control" rows="3"></textarea>
                    <span class="text text-danger" asp-validation-for="@Model.About"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Apply" class="form-label">Apply</label>
                    <textarea asp-for="@Model.Apply" class=" form-control" rows="3"></textarea>
                    <span class="text text-danger" asp-validation-for="@Model.Apply"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Certification" class="form-label">Certification</label>
                    <textarea asp-for="@Model.Certification" class=" form-control" rows="3"></textarea>
                    <span class="text text-danger" asp-validation-for="@Model.Certification"></span>
                </div>
            </div>
            <div class="col-lg-5">
                <h3 class="mt-4 mb-4">Course other Features</h3>
                <div class="mb-3">
                    <label asp-for="@Model.Starts" class="form-label">Start Date</label>
                    <input asp-for="@Model.Starts" class="form-control">
                    <span class="text text-danger" asp-validation-for="@Model.Starts"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Duration" class="form-label">Duration</label>
                    <input asp-for="@Model.Duration" class="form-control">
                    <span class="text text-danger" asp-validation-for="@Model.Duration"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.ClassDuration" class="form-label">Class Duration</label>
                    <input asp-for="@Model.ClassDuration" class="form-control">
                    <span class="text text-danger" asp-validation-for="@Model.ClassDuration"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.SkillLevel" class="form-label">Skill Level</label>
                    <input asp-for="@Model.SkillLevel" class="form-control">
                    <span class="text text-danger" asp-validation-for="@Model.SkillLevel"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Language" class="form-label">Language</label>
                    <input asp-for="@Model.Language" class="form-control">
                    <span class="text text-danger" asp-validation-for="@Model.Language"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.StudentCount" class="form-label">Student Count</label>
                    <input asp-for="@Model.StudentCount" class="form-control">
                    <span class="text text-danger" asp-validation-for="@Model.StudentCount"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Price" class="form-label">Price</label>
                    <input asp-for="@Model.Price" class="form-control">
                    <span class="text text-danger" asp-validation-for="@Model.Price"></span>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
