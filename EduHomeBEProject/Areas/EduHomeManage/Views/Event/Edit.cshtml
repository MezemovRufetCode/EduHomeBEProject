@model Event
@{
    ViewData["Title"] = "Create";
}
@section CSS{
    <style>
        label {
            font-weight: bold !important;
        }
    </style>
}
<div class="container">
    <h2 class="mt-3">Edit event</h2>
    @*enctype imageleri idare etmek ucun*@
    <form class="mt-3" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.ImageFile" class="form-label">Select Image</label>
            <input asp-for="@Model.ImageFile" accept="image/*" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.ImageFile"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Name" class="form-label">Name</label>
            <input asp-for="@Model.Name" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.Name"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.EventDay" class="form-label">Event Day</label>
            <input asp-for="@Model.EventDay" class=" form-control">
            <span class="text text-danger" asp-validation-for="@Model.EventDay"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.StartTime" class="form-label">Start Time</label>
            <input asp-for="@Model.StartTime" class=" form-control">
            <span class="text text-danger" asp-validation-for="@Model.StartTime"></span>
        </div>

        <div class="mb-3">
            <label asp-for="@Model.EndTime" class="form-label">End Time</label>
            <input asp-for="@Model.EndTime" class=" form-control">
            <span class="text text-danger" asp-validation-for="@Model.EndTime"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Location" class="form-label">Location</label>
            <input asp-for="@Model.Location" class=" form-control">
            <span class="text text-danger" asp-validation-for="@Model.Location"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.SpeakerIds" class="form-label">Speakers</label><br />
            <select asp-for="@Model.SpeakerIds" class="form-select">
                @foreach (var speaker in ViewBag.Speakers)
                {
                    if (Model.EventSpeakers.FirstOrDefault(es => es.SpeakerId == speaker.Id) != null)
                    {
                        <option value="@speaker.Id" selected>@speaker.Name</option>
                    }
                    else
                    {
                        <option value="@speaker.Id">@speaker.Name</option>
                    }
                }
            </select>
            <span class="text text-danger" asp-validation-for="@Model.SpeakerIds"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Description" class="form-label">Description</label>
            <textarea asp-for="@Model.Description" class=" form-control" rows="3"></textarea>
            <span class="text text-danger" asp-validation-for="@Model.Description"></span>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}