@model Setting
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="d-flex" style="justify-content:flex-end">
        <a asp-controller="setting" asp-action="edit" asp-route-id="@Model.Id" class="btn btn-primary btn-icon-text mt-3">
            <i class="fas fa-edit"></i>
            Edit
        </a>
    </div>

    <table class="table table-dark mt-3">
        <thead>
            <tr>
                <th>
                    Logo
                </th>
                <th>
                    Announce
                </th>
                <th>
                    Welcome
                </th>
                <th>
                    Course Title
                </th>
                <th>
                    Event Title
                </th>
                <th>
                    Blog Title
                </th>
                <th>
                    Email
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <img style="width:90px;height:60px;object-fit:contain;border-radius:0px" src="~/assets/img/logo/@Model.Logo" alt="Logo image" />
                </td>
                <td>
                    @Model.TopHeaderAnnounce
                </td>
                @if (Model.WelcomeEntry.Length > 20)
                {
                    <td>
                        @Model.WelcomeEntry.Substring(0, 20)...
                    </td>
                }
                else
                {
                    <td>
                        @Model.WelcomeEntry
                    </td>
                }

                <td>
                    @Model.CourseSecTitle
                </td>
                <td>
                    @Model.EventSecTitle
                </td>
                <td>
                    @Model.BlogSecTitle
                </td>
                <td>
                    @Model.Email
                </td>
            </tr>
        </tbody>
    </table>
