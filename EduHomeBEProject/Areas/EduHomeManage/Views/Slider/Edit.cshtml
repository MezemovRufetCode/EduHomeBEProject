@model Slider
@{
    ViewData["Title"] = "Edit";
}
@section CSS{
    <style>
        label {
            font-weight: bold !important;
        }
    </style>
}
<div class="container">
    <h2 class="mt-3">Slider Edit</h2>
    <div>
        <h4>
            Current slider image
        </h4>
        <img style="width:300px;height:200px;object-fit:contain" src="~/assets/img/slider/@Model.Image" alt="Slider image" />
    </div>
    <form class="mt-3" method="post" enctype="multipart/form-data">
        <div class="mb-3">
            <label asp-for="@Model.ImageFile" class="form-label">Select Image</label>
            <input asp-for="@Model.ImageFile" accept="image/*" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.ImageFile"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Title" class="form-label">Title</label>
            <input asp-for="@Model.Title" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.Title"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Desc" class="form-label">Description</label>
            <input asp-for="@Model.Desc" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.Desc"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Link" class="form-label">Link</label>
            <input asp-for="@Model.Link" class="form-control">
            <span class="text text-danger" asp-validation-for="@Model.Link"></span>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}