@model List<Tag>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="d-flex" style="justify-content:flex-end">
        <a asp-controller="tag" asp-action="create" class="btn btn-primary btn-icon-text mt-3">
            <i class="mdi mdi-upload btn-icon-prepend"></i>
            Create
        </a>
    </div>

    <table class="table table-dark mt-3">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Tag
                </th>
                <th>
                    Course Count
                </th>
                <th>
                    Settings
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Tag tag in Model)
            {
                <tr>
                    <td>
                        @tag.Id
                    </td>
                    <td>
                        @tag.Name
                    </td>
                    <td>
                        @tag.CourseTags.Count
                    </td>
                    <td>
                        <a asp-controller="tag" asp-action="edit" asp-route-id="@tag.Id" class="btn btn-primary btn-icon-text mt-3">
                            <i class="mdi mdi-file-check btn-icon-append"></i>
                            Edit
                        </a>
                        <a asp-controller="tag" asp-action="delete" asp-route-id="@tag.Id" class="btn btn-primary btn-icon-text mt-3 delete-item">
                            <i class="mdi mdi-alert btn-icon-prepend"></i>
                            Delete
                        </a>

                    </td>
                </tr>
            }

        </tbody>
    </table>
    <div class="container" style="display:flex;justify-content:center">
        <div class="row justify-content-center mt-5">
            <nav aria-label="...">
                <ul class="pagination justify-content-center">
                    @if (ViewBag.CurrentPage == 1)
                    {
                        <li class="page-item disabled">
                            <a class="page-link" asp-controller="tag" asp-action="index" asp-route-page="@(ViewBag.CurrentPage-1)">Previous</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" asp-controller="tag" asp-action="index" asp-route-page="@(ViewBag.CurrentPage-1)">Previous</a>
                        </li>
                    }

                    @for (int i = 1; i <= ViewBag.TotalPage; i++)
                    {
                        <li class="page-item @(ViewBag.CurrentPage==i ? "active" : "")
                                " style="@(ViewBag.CurrentPage==i ? "pointer-events:none" : "")"><a asp-controller="tag" asp-action="index" asp-route-page="@i" class="page-link">@i</a></li>
                            }

                    @if (ViewBag.CurrentPage == ViewBag.TotalPage)
                    {
                        <li class="page-item disabled">
                            <a class="page-link" asp-controller="tag" asp-action="index" asp-route-page="@(ViewBag.CurrentPage+1)">Next</a>
                        </li>
                    }
                    else
                    {
                        <li class="page-item">
                            <a class="page-link" asp-controller="tag" asp-action="index" asp-route-page="@(ViewBag.CurrentPage+1)">Next</a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>


</div>

@section Scripts{
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        $(".delete-item").click(function (e) {
            e.preventDefault();

            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    var link = $(this).attr("href");
                    fetch(link).then(response => response.json()).then(data => {
                        if (data.status == 200) {
                            location.reload(true)
                        }
                        else {
                            Swal.fire(
                                'Tag not found!',
                                'Your file can not be deleted.',
                                'Failed'
                            )
                        }
                    }

                    );

                }
            })
        })
    </script>
}