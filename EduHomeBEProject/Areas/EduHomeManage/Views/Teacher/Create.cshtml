                    </div>*@

            </div>
            <div class="col-5">

                <div class="mb-3">
                    <label asp-for="@Model.FacultyIds" class="form-label">Faculties</label>
                    <select asp-for="@Model.FacultyIds" class="form-select" asp-items="@(new SelectList(ViewBag.Faculties,"Id","Name"))">
                    </select>
                    <span class="text text-danger" asp-validation-for="@Model.FacultyIds"></span>
                </div>
                <h4 class="mt-3 mb-3">Socails</h4>
                <div class="mb-2">
                    <label asp-for="@Model.FacebookAccount" class="form-label">Facebook account</label>
                    <input asp-for="@Model.FacebookAccount" class=" form-control">
                    <span class="text text-danger" asp-validation-for="@Model.FacebookAccount"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="@Model.TwitterAccount" class="form-label">Twitter account</label>
                    <input asp-for="@Model.TwitterAccount" class=" form-control">
                    <span class="text text-danger" asp-validation-for="@Model.TwitterAccount"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="@Model.Pinterest" class="form-label">Pinterest</label>
                    <input asp-for="@Model.Pinterest" class=" form-control">
                    <span class="text text-danger" asp-validation-for="@Model.Pinterest"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="@Model.VimeoAccount" class="form-label">Vimeo Account</label>
                    <input asp-for="@Model.VimeoAccount" class=" form-control">
                    <span class="text text-danger" asp-validation-for="@Model.VimeoAccount"></span>
                </div>
                <h4 class="mt-3 mb-3">Top 6 feature</h4>
                <div style="display:flex">
                    <div class="mb-2 col-9">
                        <input asp-for="@Model.Feature1" placeholder="Feature 1" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.Feature1"></span>
                    </div>
                    <div class="mb-2 col-3">
                        <input asp-for="@Model.FeatureVal1" min="0" max="100" placeholder="Rate on 100" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.FeatureVal1"></span>
                    </div>
                </div>
                <div style="display:flex">
                    <div class="mb-2 col-9">
                        <input asp-for="@Model.Feature2" placeholder="Feature 2" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.Feature2"></span>
                    </div>
                    <div class="mb-2 col-3">
                        <input asp-for="@Model.FeatureVal2" min="0" max="100" placeholder="Rate on 100" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.FeatureVal2"></span>
                    </div>
                </div>
                <div style="display:flex">
                    <div class="mb-2 col-9">
                        <input asp-for="@Model.Feature3" placeholder="Feature 3" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.Feature3"></span>
                    </div>
                    <div class="mb-2 col-3">
                        <input asp-for="@Model.FeatureVal3" min="0" max="100" placeholder="Rate on 100" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.FeatureVal3"></span>
                    </div>
                </div>
                <div style="display:flex">
                    <div class="mb-2 col-9">
                        <input asp-for="@Model.Feature4" placeholder="Feature 4" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.Feature4"></span>
                    </div>
                    <div class="mb-2 col-3">
                        <input asp-for="@Model.FeatureVal4" min="0" max="100" placeholder="Rate on 100" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.FeatureVal4"></span>
                    </div>
                </div>
                <div style="display:flex">
                    <div class="mb-2 col-9">
                        <input asp-for="@Model.Feature5" placeholder="Feature 5" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.Feature5"></span>
                    </div>
                    <div class="mb-2 col-3">
                        <input asp-for="@Model.FeatureVal5" min="0" max="100" placeholder="Rate on 100" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.FeatureVal5"></span>
                    </div>
                </div>
                <div style="display:flex">
                    <div class="mb-2 col-9">
                        <input asp-for="@Model.Feature6" placeholder="Feature 6" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.Feature6"></span>
                    </div>
                    <div class="mb-2 col-3">
                        <input asp-for="@Model.FeatureVal6" min="0" max="100" placeholder="Rate on 100" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.FeatureVal6"></span>
                    </div>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>

@section Scripts{

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
