@model Teacher
@{
    ViewData["Title"] = "Create";
}
@section CSS{
    <style>
        label {
            font-weight: bold !important;
        }
    </style>
}
<div class="container">
    <h2 class="mt-3">Create teacher</h2>
    @*enctype imageleri idare etmek ucun*@
    <form class="mt-3" method="post" enctype="multipart/form-data">
        <div style="display:flex;justify-content:space-around">
            <div class="col-5">
                <div class="mb-3">
                    <label asp-for="@Model.ImageFile" class="form-label">Select Image</label>
                    <input asp-for="@Model.ImageFile" accept="image/*" class="form-control">
                    <span class="text text-danger" asp-validation-for="@Model.ImageFile"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input asp-for="@Model.Name" class="form-control">
                    <span class="text text-danger" asp-validation-for="@Model.Name"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Position" class="form-label">Position</label>
                    <input asp-for="@Model.Position" class="form-control">
                    <span class="text text-danger" asp-validation-for="@Model.Position"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Email" class="form-label">Email</label>
                    <input asp-for="@Model.Email" class="form-control">
                    <span class="text text-danger" asp-validation-for="@Model.Email"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Phone" class="form-label">Phone</label>
                    <input asp-for="@Model.Phone" class="form-control">
                    <span class="text text-danger" asp-validation-for="@Model.Phone"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Degree" class="form-label">Degree</label>
                    <input asp-for="@Model.Degree" class="form-control">
                    <span class="text text-danger" asp-validation-for="@Model.Degree"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Experience" class="form-label">Experience</label>
                    <input asp-for="@Model.Experience" class="form-control">
                    <span class="text text-danger" asp-validation-for="@Model.Experience"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.About" class="form-label">About</label>
                    <textarea asp-for="@Model.About" class=" form-control" rows="3"></textarea>
                    <span class="text text-danger" asp-validation-for="@Model.About"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.HobbyIds" class="form-label">Hobbies</label>
                    <select asp-for="@Model.HobbyIds" class="form-select" asp-items="@(new SelectList(ViewBag.Hobbies,"Id","Name"))">
                    </select>
                    <span class="text text-danger" asp-validation-for="@Model.HobbyIds"></span>
                </div>

