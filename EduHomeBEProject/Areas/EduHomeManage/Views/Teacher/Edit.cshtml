@model Teacher
@{
    ViewData["Title"] = "Create";
}
@section CSS{
    <style>
        label {
            font-weight: bold !important;
        }
    </style>
}
<div class="container">
    <h2 class="mt-3">Edit teacher</h2>
    @*enctype imageleri idare etmek ucun*@
    <form class="mt-3" method="post" enctype="multipart/form-data">
        <div style="display:flex;justify-content:space-around">
            <div class="col-5">
                <div class="mb-3">
                    <label asp-for="@Model.ImageFile" class="form-label">Select Image</label>
                    <input asp-for="@Model.ImageFile" accept="image/*" class="form-control">
                    <span class="text text-danger" asp-validation-for="@Model.ImageFile"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label">Name</label>
                    <input asp-for="@Model.Name" class="form-control">
                    <span class="text text-danger" asp-validation-for="@Model.Name"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Position" class="form-label">Position</label>
                    <input asp-for="@Model.Position" class=" form-control">
                    <span class="text text-danger" asp-validation-for="@Model.Position"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Email" class="form-label">Email</label>
                    <input asp-for="@Model.Email" class=" form-control">
                    <span class="text text-danger" asp-validation-for="@Model.Email"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="@Model.Phone" class="form-label">Phone</label>
                    <input asp-for="@Model.Phone" class=" form-control">
                    <span class="text text-danger" asp-validation-for="@Model.Phone"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Degree" class="form-label">Degree</label>
                    <input asp-for="@Model.Degree" class="form-control">
                    <span class="text text-danger" asp-validation-for="@Model.Degree"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.Experience" class="form-label">Experience</label>
                    <input asp-for="@Model.Experience" class="form-control">
                    <span class="text text-danger" asp-validation-for="@Model.Experience"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.About" class="form-label">About</label>
                    <textarea asp-for="@Model.About" class=" form-control" rows="3"></textarea>
                    <span class="text text-danger" asp-validation-for="@Model.About"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.HobbyIds" class="form-label">Hobbies</label><br />
                    <select asp-for="@Model.HobbyIds" class="form-select">
                        @foreach (var hobby in ViewBag.Hobbies)
                        {
                            if (Model.TeacherHobbies.FirstOrDefault(th => th.HobbyId == hobby.Id) != null)
                            {
                                <option value="@hobby.Id" selected>@hobby.Name</option>
                            }
                            else
                            {
                                <option value="@hobby.Id">@hobby.Name</option>
                            }
                        }
                    </select>
                    <span class="text text-danger" asp-validation-for="@Model.HobbyIds"></span>
                </div>
            </div>
            <div class="col-5">
                
                <div class="mb-3">
                    <label asp-for="@Model.FacultyIds" class="form-label">Faculties</label><br />
                    <select asp-for="@Model.FacultyIds" class="form-select">
                        @foreach (var faculty in ViewBag.Faculties)
                        {
                            if (Model.TeacherFaculties.FirstOrDefault(tf => tf.FacultyId == faculty.Id) != null)
                            {
                                <option value="@faculty.Id" selected>@faculty.Name</option>
                            }
                            else
                            {
                                <option value="@faculty.Id">@faculty.Name</option>
                            }
                        }
                    </select>
                    <span class="text text-danger" asp-validation-for="@Model.FacultyIds"></span>
                </div>
                <h4 class="mt-3 mb-3">Edit teacher socials</h4>
                <div class="mb-2">
                    <label asp-for="@Model.FacebookAccount" class="form-label">Facebook account</label>
                    <input asp-for="@Model.FacebookAccount" class=" form-control">
                    <span class="text text-danger" asp-validation-for="@Model.FacebookAccount"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="@Model.TwitterAccount" class="form-label">Twitter account</label>
                    <input asp-for="@Model.TwitterAccount" class=" form-control">
                    <span class="text text-danger" asp-validation-for="@Model.TwitterAccount"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="@Model.Pinterest" class="form-label">Pinterest</label>
                    <input asp-for="@Model.Pinterest" class=" form-control">
                    <span class="text text-danger" asp-validation-for="@Model.Pinterest"></span>
                </div>
                <div class="mb-2">
                    <label asp-for="@Model.VimeoAccount" class="form-label">Vimeo Account</label>
                    <input asp-for="@Model.VimeoAccount" class=" form-control">
                    <span class="text text-danger" asp-validation-for="@Model.VimeoAccount"></span>
                </div>
                <h4 class="mt-3 mb-3">Top 6 feature</h4>
                <div style="display:flex">
                    <div class="mb-2 col-9">
                        <input asp-for="@Model.Feature1" placeholder="Feature 1" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.Feature1"></span>
                    </div>
                    <div class="mb-2 col-3">
                        <input asp-for="@Model.FeatureVal1" min="0" max="100" placeholder="Rate on 100" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.FeatureVal1"></span>
                    </div>
                </div>
                <div style="display:flex">
                    <div class="mb-2 col-9">
                        <input asp-for="@Model.Feature2" placeholder="Feature 2" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.Feature2"></span>
                    </div>
                    <div class="mb-2 col-3">
                        <input asp-for="@Model.FeatureVal2" min="0" max="100" placeholder="Rate on 100" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.FeatureVal2"></span>
                    </div>
                </div>
                <div style="display:flex">
                    <div class="mb-2 col-9">
                        <input asp-for="@Model.Feature3" placeholder="Feature 3" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.Feature3"></span>
                    </div>
                    <div class="mb-2 col-3">
                        <input asp-for="@Model.FeatureVal3" min="0" max="100" placeholder="Rate on 100" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.FeatureVal3"></span>
                    </div>
                </div>
                <div style="display:flex">
                    <div class="mb-2 col-9">
                        <input asp-for="@Model.Feature4" placeholder="Feature 4" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.Feature4"></span>
                    </div>
                    <div class="mb-2 col-3">
                        <input asp-for="@Model.FeatureVal4" min="0" max="100" placeholder="Rate on 100" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.FeatureVal4"></span>
                    </div>
                </div>
                <div style="display:flex">
                    <div class="mb-2 col-9">
                        <input asp-for="@Model.Feature5" placeholder="Feature 5" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.Feature5"></span>
                    </div>
                    <div class="mb-2 col-3">
                        <input asp-for="@Model.FeatureVal5" min="0" max="100" placeholder="Rate on 100" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.FeatureVal5"></span>
                    </div>
                </div>
                <div style="display:flex">
                    <div class="mb-2 col-9">
                        <input asp-for="@Model.Feature6" placeholder="Feature 6" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.Feature6"></span>
                    </div>
                    <div class="mb-2 col-3">
                        <input asp-for="@Model.FeatureVal6" min="0" max="100" placeholder="Rate on 100" class=" form-control">
                        <span class="text text-danger" asp-validation-for="@Model.FeatureVal6"></span>
                    </div>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
}