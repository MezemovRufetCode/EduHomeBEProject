@model List<Course>
@{
    ViewData["Title"] = "Index";
}

<div class="banner-area-wrapper">
    <div class="banner-area text-center">
        <div class="container">
            <div class="row">
                <div class="col-xs-12">
                    <div class="banner-content-wrapper">
                        <div class="banner-content">
                            <h2>Related Course</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Banner Area End -->
<!-- Course Start -->
<div class="course-area pt-150 pb-150">
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <div class="course-title">
                    <h3>search courses</h3>
                </div>
                <div class="course-form">
                    <form method="get" asp-action="Index" id="search">
                        <input id="searchInput" type="search" placeholder="Search..." value="@ViewData["GetCoursedetails"]" name="CrsSearch" />
                        <button type="submit">search</button>
                    </form>
                </div>
            </div>
        </div>
        <div class="row">
            @await Html.PartialAsync("_CoursePartialView")
        </div>
    </div>
</div>


@*Pagination*@
<div class="container" style="display:flex;justify-content:center">
    <div class="row justify-content-center mt-5">
        <nav aria-label="...">
            <ul class="pagination justify-content-center">
                @if (ViewBag.CurrentPage == 1)
                {
                    <li class="page-item disabled">
                        <a class="page-link" asp-controller="course" asp-action="index" asp-route-page="@(ViewBag.CurrentPage-1)">Previous</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="course" asp-action="index" asp-route-page="@(ViewBag.CurrentPage-1)">Previous</a>
                    </li>
                }

                @for (int i = 1; i <= ViewBag.TotalPage; i++)
                {
                    <li class="page-item @(ViewBag.CurrentPage==i ? "active" : "")
                                " style="@(ViewBag.CurrentPage==i ? "pointer-events:none" : "")"><a asp-controller="course" asp-action="index" asp-route-page="@i" class="page-link">@i</a></li>
                            }

                @if (ViewBag.CurrentPage == ViewBag.TotalPage)
                {
                    <li class="page-item disabled">
                        <a class="page-link" asp-controller="course" asp-action="index" asp-route-page="@(ViewBag.CurrentPage+1)">Next</a>
                    </li>
                }
                else
                {
                    <li class="page-item">
                        <a class="page-link" asp-controller="course" asp-action="index" asp-route-page="@(ViewBag.CurrentPage+1)">Next</a>
                    </li>
                }
            </ul>
        </nav>
    </div>
</div>
