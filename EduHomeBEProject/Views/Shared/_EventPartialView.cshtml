@model List<Event>
@foreach (var eventt in Model)
{
    <div class="col-md-4 col-sm-6 col-xs-12">
        <div class="single-event mb-60" style="height:490px;width:300px">
            <div class="event-img">
                <a asp-controller="event" asp-action="details" asp-route-id="@eventt.Id">
                    <img src="~/assets/img/event/@eventt.Image" alt="event">
                    <div class="course-hover">
                    </div>
                </a>
                <div class="event-date">
                    <h3>@eventt.EventDay.ToString("dd")<span style="font-size:12px">@eventt.EventDay.ToString("MMMM")</span></h3>
                </div>
            </div>
            <div class="event-content text-left">
                <h4><a asp-controller="event" asp-action="details" asp-route-id="@eventt.Id">@eventt.Name</a></h4>
                <ul>
                    <li><span>time:</span> @eventt.StartTime.ToString("HH:mm tt") - @eventt.EndTime.ToString("HH:mm tt")</li>
                    <li><span>venue</span> @eventt.Location</li>
                </ul>
                <div class="event-content-right">
                    <a class="default-btn" asp-controller="event" asp-action="details" asp-route-id="@eventt.Id">join now</a>
                </div>
            </div>
        </div>
    </div>
}